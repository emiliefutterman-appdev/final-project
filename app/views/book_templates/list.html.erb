<h1>
  Collection
</h1>

<a href="/new_book_form">
  Add a new book
</a>

<hr>

<table>
  <tr>
    
    <th>
      Title
    </th>

    <th>
      Author
    </th>

    <th>
      Cover
    </th>

    <th>
      Amazon
    </th>

    <th>
      Donator
    </th>

    <th>
      Check Out
    </th>

    <th>
    </th>
  </tr>

  <% @books.each do |book| %>
  <tr>

    <td>
      <%= book.title %>
    </td>

    <td>
      <%= book.author %>
    </td>

    <td>
      <img src="<%= book.cover %>">
    </td>

    <td>
      <a href=" <%= book.amazon %> "> Amazon Listing </a>
    </td>

    <td>
      <%= book.donator.first %>
    </td>

    <td>
      <% if book.borrowed == false %>
          <div> <a href="/borrow_book/<%= book.id %>"> Borrow Book </a> </div>
      <% else %> Checked Out
      <% end %>
    </td>

    <td>
      <a href="/books/<%= book.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
